﻿﻿@model PassionProject1N01659860.Models.CommentsDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2 class="mb-4">Are you sure you want to delete this comment?</h2>
<div class="card col-md-6">
    @{
        string imageurl = "/Content/Images/Arts/default.jpg";
        if (Model.ImageURL)
        {
            imageurl = "/Content/Images/Arts/" + Model.ArtID + "." + Model.PicExtension;
        }
    }
    <img class="img-fluid rounded-2" src="@imageurl" alt="@Model.Title" />
    <div class="card-body">
        <p class="card-text mb-2"><strong>Commented By:</strong> @Model.UserName</p>
        <p class="card-text mb-2"><strong>Art Title:</strong> @Model.Title</p>
        <p class="card-text mb-2"><strong>Comment:</strong> @Model.CommentText</p>
        <p class="card-text mb-2"><strong>Date Commented:</strong> @Model.DateCommented.ToString()</p>
        <div class="d-flex mt-4">
            <a href="/Comments/List" class="btn btn-outline-danger me-3">Cancel</a>
            <form action="/Comments/Delete/@Model.CommentID" method="POST">
                <input type="submit" value="Confirm Delete" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>
