﻿﻿@model PassionProject1N01659860.Models.Art

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2 class="mb-3">Are you sure you want to delete this art?</h2>
<div class="p-4 rounded-2" style="background-color: #f5f5f5;">
    <div class="row">
        <div class="art-info col-12 col-md-6 col-lg-7">
            <h2>@Model.Title</h2>
            <p class="art-artist mb-2"><small><em>@Model.Artist</em></small></p>
            <p><strong>Description:</strong><br /> @Model.Description</p>
            <p><strong>Medium:</strong> @Model.Medium</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Year Installed:</strong> @Model.YearInstalled.ToString("yyyy")</p>
            <div class="d-flex align-items-center">
                <a href="/Art/List" class="btn btn-danger  me-2 mb-2">Cancel</a>
                <form action="/Art/Delete/@Model.ArtID" method="POST">
                    <input type="submit" value="Confirm Delete" class="btn btn-success mb-2" />
                </form>
            </div>
        </div>
        <div class="art-image col-12 col-md-6 col-lg-5 mt-4 mt-md-0">
            <img class="img-fluid rounded-2" src="@Model.ImageURL" alt="@Model.Title" />
        </div>
    </div>
</div>