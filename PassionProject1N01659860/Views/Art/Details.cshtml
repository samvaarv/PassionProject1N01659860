﻿@model PassionProject1N01659860.Models.Art
@{
    ViewBag.Title = "Details";
}

<a href="/Art/List">Go back to list</a>
<br />
<a href="/Art/Edit/@Model.ArtID">Update</a>
<br />
<a style="color:#ab2020;" href="/Art/DeleteConfirm/@Model.ArtID">Delete</a>
<h2>@Model.Title</h2>
<img src="@Model.ImageURL" alt="@Model.Title" />
<div><strong>Artist:</strong> @Model.Artist</div>
<div><strong>Description:</strong> @Model.Description</div>
<div><strong>Medium:</strong> @Model.Medium</div>
<div><strong>Location:</strong> @Model.Location</div>
<div><strong>Year Installed:</strong> @Model.YearInstalled.ToString("yyyy")</div>

<h3>Comments</h3>
@if (Model.Comments != null && Model.Comments.Any())
{
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                <strong>@comment.User.UserName (@comment.User.Email)</strong> on @comment.DateCommented.ToString("yyyy-MM-dd")
                <div>@comment.CommentText</div>
            </li>
        }
    </ul>
}
else
{
    <p>No comments available for this art.</p>
}