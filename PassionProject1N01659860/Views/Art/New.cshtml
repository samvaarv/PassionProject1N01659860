﻿
@{
    ViewBag.Title = "New";
}

<h2 class="mb-4">Add new Art</h2>

<form action="/Art/Create" method="post" class="row">
    <div class="form-group col-md-6 mb-3">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group col-md-6 mb-3">
        <label for="Artist">Artist</label>
        <input type="text" class="form-control" id="Artist" name="Artist" required />
    </div>
    <div class="form-group col-12 mb-3">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="5" required></textarea>
    </div>
    <div class="form-group col-md-6 mb-3 d-none">
        <label for="ImageFile">Upload Image</label>
        <input type="file" class="form-control" id="ImageFile" name="ImageURL" accept="image/gif, image/jpeg, image/jpg, image/png" />
    </div>
    <div class="form-group col-md-5 mb-3">
        <label for="Location">Location</label>
        <input type="text" class="form-control" id="Location" name="Location" required />
    </div>
    <div class="form-group col-md-2 mb-3">
        <label for="Medium">Medium</label>
        <input type="text" class="form-control" id="Medium" name="Medium" required />
    </div>
    <div class="form-group col-md-3 mb-3">
        <label for="YearInstalled">Year Installed</label>
        <input type="date" class="form-control" id="YearInstalled" name="YearInstalled" required />
    </div>
    <div class="form-group col-md-2 mb-3">
        <label for="ImageOrientation">Image Orientation</label>
        <input type="text" class="form-control" id="ImageOrientation" name="ImageOrientation" required />
    </div>
    <div>
        <input class="btn btn-secondary" type="submit" value="Add Art" />
    </div>
</form>